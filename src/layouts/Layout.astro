---
// src/layouts/Layout.astro (oder wie dein Layout hei√üt)
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
}

const { title = "HEV Doku", description = "Willkommen zur HEV Dokumentation" } =
  Astro.props;
---

<!doctype html>
<html lang="de" dir="ltr" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta charset="UTF-8" />
    <title>{title}</title>

    <!-- Pagefind UI Scripts -->
    <link href="/_pagefind/pagefind-ui.css" rel="stylesheet" />
    <script is:inline src="/_pagefind/pagefind-ui.js"></script>
    <!-- Pagefind Styles laden -->
    <link
      rel="stylesheet"
      href="https://unpkg.com/@pagefind/default-ui@latest/css/ui.css"
    />
  </head>
  <body>
    <Header />
    <main class="custom-main">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  body {
    font-family: "Space Grotesk", sans-serif;
    color: #242d2c;
    background-color: #ffffff;
  }

  /* Such-Button */
  site-search button[data-open-modal] {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    cursor: pointer;
  }

  site-search button[data-open-modal]:hover {
    border-color: #2e8555;
  }

  /* Modal Styling */
  site-search dialog {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    padding: 2rem;
    max-width: 600px;
  }
</style>
