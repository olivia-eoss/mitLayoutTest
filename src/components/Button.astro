---
// src/components/HevButton.astro
interface Props {
  text: string;
  href: string;
  variant?: "green" | "white";
  target?: "_blank" | "_self";
}

const { text, href, variant = "green", target = "_self" } = Astro.props;
---

<a href={href} class={`hev-button hev-button--${variant}`} target={target}>
  <slot name="icon-left" />
  <span class="hev-button__text">{text}</span>
  <slot name="icon-right" />
</a>

<style>
  .hev-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-family: "Space Grotesk", sans-serif;
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    border: 2px solid transparent;
    vertical-align: middle;
    line-height: 1;
  }

  /* Grüne Variante */
  .hev-button--green {
    background-color: #2e8555;
    color: #ffffff;
    border-color: #2e8555;
  }

  .hev-button--green:hover {
    background-color: #246d44;
    border-color: #246d44;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(46, 133, 85, 0.3);
  }

  /* Weiße Variante */
  .hev-button--white {
    background-color: #ffffff;
    color: #2e8555;
    border-color: #2e8555;
  }

  .hev-button--white:hover {
    background-color: #f5f5f5;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(46, 133, 85, 0.2);
  }

  /* Active State */
  .hev-button:active {
    transform: translateY(0);
  }

  /* Icon Größe festlegen */
  .hev-button :global(svg) {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }
</style>
