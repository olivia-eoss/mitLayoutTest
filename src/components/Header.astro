---
import Search from "@astrojs/starlight/components/Search.astro";
import Button from "./Button.astro";
import { ArrowRight } from "lucide-astro";
import logo from "../assets/Logo-hev.svg";
---

<header class="header">
  <div class="header__container">
    <a href="/" class="header__logo">
      <img src={logo.src} alt="HEV Logo" />
    </a>

    <div class="header__spacer"></div>

    <div class="header__right">
      <div class="header__search">
        <Search />
      </div>
      <Button text="Kontakt" href="/kontakt">
        <ArrowRight slot="icon-right" />
      </Button>
    </div>
  </div>
</header>

<style>
  .header {
    background-color: #ffffff;
    border-bottom: 1px solid #ededed;
    padding: 1rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .header__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .header__logo {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }

  .header__logo img {
    height: 40px;
    width: auto;
  }

  .header__spacer {
    flex: 1;
  }

  .header__right {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-shrink: 0;
  }

  .header__search {
    width: 300px;
  }

  @media (max-width: 768px) {
    .header__container {
      padding: 0 1rem;
      gap: 1rem;
    }

    .header__search {
      width: 200px;
    }
  }

  @media (max-width: 600px) {
    .header__search {
      width: 150px;
    }
  }

  site-search button[data-open-modal] {
    background-color: #ffffff !important;
    border: 2px solid #ededed !important;
    border-radius: 8px !important;
    padding: 0.5rem 1rem !important;
    font-family: "Space Grotesk", sans-serif !important;
    font-size: 0.9rem !important;
    color: #242d2c !important;
    cursor: pointer !important;
    transition: all 0.3s ease !important;
    display: flex !important;
    align-items: center !important;
    gap: 0.5rem !important;
    width: 100% !important;
  }

  site-search button[data-open-modal]:hover {
    border-color: #2e8555 !important;
    box-shadow: 0 2px 8px rgba(46, 133, 85, 0.2) !important;
  }

  site-search button[data-open-modal] svg {
    color: #2e8555 !important;
  }

  site-search button[data-open-modal] kbd {
    background-color: #ededed !important;
    border: 1px solid #ededed !important;
    border-radius: 4px !important;
    padding: 0.2rem 0.4rem !important;
    font-family: "Space Grotesk", sans-serif !important;
    font-size: 0.75rem !important;
    color: #242d2c !important;
    margin-left: auto !important;
  }

  site-search dialog {
    background-color: #ffffff !important;
    border: none !important;
    border-radius: 12px !important;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2) !important;
    max-width: 600px !important;
    width: 90% !important;
  }

  site-search input[type="text"] {
    font-family: "Space Grotesk", sans-serif !important;
    font-size: 1rem !important;
    padding: 0.75rem 1rem !important;
    border: 2px solid #ededed !important;
    border-radius: 8px !important;
    color: #242d2c !important;
  }

  site-search input[type="text"]:focus {
    outline: none !important;
    border-color: #2e8555 !important;
  }

  .pagefind-ui {
    font-family: "Space Grotesk", sans-serif !important;
  }

  .pagefind-ui__result {
    border: 1px solid #ededed !important;
    border-radius: 8px !important;
    padding: 1rem !important;
    margin-bottom: 0.5rem !important;
    transition: all 0.3s ease !important;
  }

  .pagefind-ui__result:hover {
    border-color: #2e8555 !important;
    background-color: rgba(46, 133, 85, 0.05) !important;
  }

  .pagefind-ui__result-title {
    color: #2e8555 !important;
    font-weight: 700 !important;
    font-size: 1.1rem !important;
  }

  .pagefind-ui__result-excerpt {
    color: #242d2c !important;
    font-size: 0.9rem !important;
  }

  .pagefind-ui__message {
    color: #242d2c !important;
    font-family: "Space Grotesk", sans-serif !important;
  }

  site-search dialog button[data-close-modal] {
    background-color: transparent !important;
    border: none !important;
    color: #242d2c !important;
    cursor: pointer !important;
    padding: 0.5rem !important;
  }

  site-search dialog button[data-close-modal]:hover {
    background-color: #ededed !important;
    border-radius: 4px !important;
  }

  @media (max-width: 768px) {
    site-search dialog {
      width: 95% !important;
    }
  }
</style>

<style is:global>
  body {
    font-family: "Space Grotesk", sans-serif;
    color: #242d2c;
    background-color: #ffffff;
  }

  site-search button[data-open-modal] {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    cursor: pointer;
  }

  site-search button[data-open-modal]:hover {
    border-color: #2e8555;
  }

  site-search dialog {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    padding: 2rem;
    max-width: 600px;
  }
</style>
