---
// src/components/Footer.astro
---

<footer class="hev-footer">
  <div class="hev-footer__container">
    <div class="hev-footer__content">
      <div class="hev-footer__section">
        <h3>HEV Doku</h3>
        <p>Deine Dokumentationsplattform</p>
      </div>

      <div class="hev-footer__section">
        <h4>Links</h4>
        <ul>
          <li><a href="/docs">Dokumentation</a></li>
          <li><a href="/kontakt">Kontakt</a></li>
        </ul>
      </div>

      <div class="hev-footer__section">
        <h4>Legal</h4>
        <ul>
          <li><a href="/impressum">Impressum</a></li>
          <li><a href="/datenschutz">Datenschutz</a></li>
        </ul>
      </div>
    </div>

    <div class="hev-footer__bottom">
      <p>&copy; {new Date().getFullYear()} HEV. Alle Rechte vorbehalten.</p>
    </div>
  </div>
</footer>

<style>
  .hev-footer {
    background-color: #242d2c;
    color: #ffffff;
    padding: 3rem 0 1.5rem;
    margin-top: 4rem;
  }

  .hev-footer__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .hev-footer__content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .hev-footer__section h3 {
    color: #2e8555;
    margin-bottom: 0.5rem;
    font-size: 1.25rem;
  }

  .hev-footer__section h4 {
    color: #ffffff;
    margin-bottom: 0.75rem;
    font-size: 1rem;
  }

  .hev-footer__section p {
    color: #ededed;
    font-size: 0.9rem;
  }

  .hev-footer__section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .hev-footer__section ul li {
    margin-bottom: 0.5rem;
  }

  .hev-footer__section ul li a {
    color: #ededed;
    text-decoration: none;
    font-size: 0.9rem;
  }

  .hev-footer__section ul li a:hover {
    color: #2e8555;
  }

  .hev-footer__bottom {
    border-top: 1px solid rgba(237, 237, 237, 0.2);
    padding-top: 1.5rem;
    text-align: center;
  }

  .hev-footer__bottom p {
    color: #ededed;
    font-size: 0.875rem;
    margin: 0;
  }

  @media (max-width: 768px) {
    .hev-footer__content {
      grid-template-columns: 1fr;
    }
  }
</style>
