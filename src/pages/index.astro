---
// src/pages/index.astro
import SimpleLayout from "../layouts/Layout.astro";
import Search from "@astrojs/starlight/components/Search.astro";
---

<SimpleLayout title="Willkommen">
  <h2>Hallo</h2>
  <div class="hero__search">
    <Search />
  </div>
</SimpleLayout>

<style>
  .hero__search {
    max-width: 520px;
    margin-top: 1.2rem;
  }
</style>

<style is:global>
  /* Basis Styling */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: "Space Grotesk", sans-serif;
    color: #242d2c;
    background-color: #ffffff;
    line-height: 1.6;
  }

  /* Nur Such-Button stylen */
  site-search button[data-open-modal] {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    font-family: inherit;
    font-size: 0.875rem;
    cursor: pointer;
    width: 100%;
  }

  site-search button[data-open-modal]:hover {
    border-color: #2e8555;
  }

  site-search kbd {
    margin-left: auto;
    padding: 0.125rem 0.375rem;
    background: #f3f4f6;
    border: 1px solid #e5e7eb;
    border-radius: 0.25rem;
    font-size: 0.75rem;
  }
</style>
